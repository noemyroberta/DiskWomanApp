<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="270dp"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/about_text2"
                android:gravity="center"
                android:layout_marginTop="264dp"
                android:text="Botão do Pânico"
                android:textSize="24dp"
                android:textColor="@color/colorPurpleLast"/>

        </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_text1"
            android:gravity="center"
            android:text="O botão do pânico, é uma medida eficaz de segunrança com o objetivo de proteger as mulheres que são vítimas de violência ou assalto. Quando ativo, envia um alarme emergencial que será enviado para à polícia ou para uma central de monitoramento. "
            android:textSize="14dp"
            android:textColor="#000"/>

    </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>